<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2708a0"
        android:weightSum="5"
        android:orientation="vertical"
        tools:context=".UserList">

    <RelativeLayout
            android:id="@+id/rv_userList_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#2708a0"
            android:layout_weight="1">

        <TextView
                android:id="@+id/img_addThoughts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:textColor="#fff"
                android:text="@string/user_list_add_thoughts"
                android:textStyle="bold"
                android:fontFamily="sans-serif"/>

        <TextView
                android:id="@+id/tv_thought_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="@string/hello"
                android:textColor="#ff686b"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:background="@drawable/background">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_userList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:layout_margin="12dp"
                tools:layout_editor_absoluteX="10dp"/>
    </RelativeLayout>


</LinearLayout>